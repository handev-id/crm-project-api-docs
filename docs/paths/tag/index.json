{
  "get": {
    "summary": "List Tags",
    "tags": ["Tag"],
    "security": [{ "bearerAuth": [] }],
    "responses": {
      "200": {
        "description": "List of tags",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "../../components/schemas/Tag.json"
              }
            }
          }
        }
      }
    }
  },
  "post": {
    "summary": "Create Tag",
    "tags": ["Tag"],
    "security": [{ "bearerAuth": [] }],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "Follow Up",
                "required": true
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Tag created successfully",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../components/schemas/Tag.json"
            }
          }
        }
      },
      "422": {
        "description": "Validation Error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../components/schemas/ValidationError.json"
            }
          }
        }
      }
    }
  }
}
