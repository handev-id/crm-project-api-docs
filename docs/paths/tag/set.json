{
  "post": {
    "summary": "Select Tag",
    "tags": ["Tag"],
    "security": [{ "bearerAuth": [] }],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "conversationId": {
                "type": "integer",
                "example": "1"
              },
              "tagId": {
                "type": "integer",
                "example": "2"
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Select Tag Successfuly",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../components/schemas/Message.json"
            }
          }
        }
      },
      "422": {
        "description": "Validation Error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../components/schemas/ValidationError.json"
            }
          }
        }
      }
    }
  }
}
